  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts --no-dts-resolve",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "tsup": "^8.5.1",
    "vitest": "^4.0.18"
  }
}
